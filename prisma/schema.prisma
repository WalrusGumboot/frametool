generator client {
  provider      = "prisma-client"
  output        = "../src/lib/prisma-client"
  moduleFormat  = "esm"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Campaign {
  id    Int    @id @default(autoincrement())
  slug  String @unique
  title String
  frame String // base-64 encoded png
}
